.projects
  width 100% !important
  .project-content
    display -webkit-flex;
    display -ms-flex;
    display -moz-flex;
    display  flex
    flex-wrap wrap
    justify-content space-around


    .project-name
      width 100%
      height 2rem
      font-size 1rem
      line-height 2rem
      text-align center
    .img-box
      width 100%
      border 1px solid #bbb
      background-size contain !important
      height 200px
      @media phone
        height 200px

      @media mini
        height 200px

      @media tablet
        height 250px

      @media desktop
        height 300px

    .project-item
      border-radius 2px
      margin-top 1rem
      width 100%
      @media phone
        width 80%

      @media mini
        width 45%

      @media tablet
        width 45%

      @media desktop
        width 30%

